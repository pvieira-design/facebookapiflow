{
  "version": "7.3",
  "data_api_version": "3.0",
  "screens": [
    {
      "id": "LANDING",
      "title": "Avaliação de Sono",
      "terminal": false,
      "data": {
        "headline": {
          "type": "string",
          "__example__": "Descubra por que você não dorme bem em apenas 3 minutos."
        },
        "subtext": {
          "type": "string",
          "__example__": "Avaliação rápida e personalizada usada por médicos."
        },
        "badge_text": {
          "type": "string",
          "__example__": "Baseado no PSQI — padrão internacional"
        },
        "question_label": {
          "type": "string",
          "__example__": "Quanto tempo você leva para pegar no sono?"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" }
            }
          },
          "__example__": [
            { "id": "opt1", "title": "Menos de 15 minutos" }
          ]
        },
        "_state": { "type": "string", "__example__": "{}" },
        "_step": { "type": "string", "__example__": "landing" },
        "_history": { "type": "string", "__example__": "[]" }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "form",
            "children": [
              {
                "type": "TextHeading",
                "text": "${data.headline}"
              },
              {
                "type": "TextBody",
                "text": "${data.subtext}"
              },
              {
                "type": "TextCaption",
                "text": "${data.badge_text}"
              },
              {
                "type": "RadioButtonsGroup",
                "name": "answer",
                "label": "${data.question_label}",
                "required": true,
                "data-source": "${data.options}"
              },
              {
                "type": "Footer",
                "label": "Começar avaliação",
                "on-click-action": {
                  "name": "data_exchange",
                  "payload": {
                    "answer": "${form.answer}",
                    "_state": "${data._state}",
                    "_step": "${data._step}",
                    "_history": "${data._history}"
                  }
                }
              }
            ]
          }
        ]
      }
    },
